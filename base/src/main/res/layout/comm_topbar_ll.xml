<?xml version="1.0" encoding="utf-8"?><!-- 相册多选顶部标题栏 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comm_topbar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#fd4b4d">

    <Button
        android:id="@+id/topbar_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/selector_back_arrow"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingTop="5dp"
        android:paddingRight="40dp"
        android:paddingBottom="5dp"
        android:text="123123"
        android:textColor="@drawable/xml_back_textcolor"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/topbar_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLength="16"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/topbar_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:textColor="@drawable/xml_back_textcolor"
        android:textSize="15sp"
        android:visibility="invisible" />

</RelativeLayout>